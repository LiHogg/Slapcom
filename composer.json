{
  "name": "LiHo/social-network",
  "description": "A simple social network built with PHP and MySQL",
  "type": "project",
  "license": "MIT",
  "require": {
    "php": ">=8.2",
    "vlucas/phpdotenv": "^5.5",
    "monolog/monolog": "^3.0",
    "respect/validation": "^2.2"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "config": {
    "optimize-autoloader": true
  },
  "scripts": {
    "post-install-cmd": [
      "cp .env.example .env"
    ]
  }
}
